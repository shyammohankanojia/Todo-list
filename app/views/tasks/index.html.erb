<h1><%= current_user.login %>'s Tasks</h1>
<p id='notice'><%= notice %></p>

<h2>To-do</h2>
<% @todo_tasks.each do |task| %>
<div class=" task-box shadow">
   <b> <%= task.title %></b><br/>
    <%= link_to 'Show', task %>
    <%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %>
    <%= link_to 'Done!', done_task_url(task) %>
</div>
<% end %>

<h2>Done</h2>
<% @done_tasks.each do |task| %>
<div class=" task-box shadow">
   <b> <%= task.title %></b><br/>
    <%= link_to 'Show', task %>
    <%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %>
</div>
<% end %>

<%= link_to 'New Task', new_task_path %>
